<h1>Your Vites {{username}}</h1>
<h3>Post a new Vite:</h3>
<form id="newVite">
    <input type="text" id="what" placeholder="WHAT?">
    <input type="text" id="place" placeholder="WHERE?">
    <input type="date" id="date" placeholder="DATE?">
    <input type="time" id="time" placeholder="TIME?">
    <input type="text" id="capacity" placeholder="HOW MANY PEOPLE?">
    <textarea id="body" cols="30" rows="10"></textarea>
    <button id="vitePhoto">Upload your Vite photo</button>
    <button id="postVite">Post</button>
</form>
<h3>Upcoming Vites</h3>
{{#each Vites}}
    <h3>{{location}}</h3>
    <p>Date: {{date}}</p>
    <p>Time: {{time}}</p>
    <p>Details: {{details}}</p>
    <p>Capacity: {{capacity}}</p>
    <hr>
{{/each}}

<script src="/js/profile.js"></script>